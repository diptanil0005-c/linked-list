#include <stdio.h>
int hanoi(int n, char from, char to, char aux){
    if(n==1){
        printf("Move disc %d from %c to %c\n",n,from,to);
        
    }
    
else{
    
    hanoi(n-1,from,aux,to);
    printf("Move disc %d from %c to %c\n",n,from,to);
    hanoi(n-1,aux,to,from);
}
}
int main(){
    int n;
    printf("enter no of disc:\n");
    scanf("%d",&n);
    hanoi(n,'A','C','B');
    

   
       
    
   
    return 0;
}