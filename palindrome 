
#include <stdio.h>
#include <string.h>
int check(char *str, int left, int right){
    if(left>=right){
        return 1;
    }
        else if(str[left]==str[right]){
          return check(str,left+1,right-1);  
        }
        else{
            return 0;
        }
}
int ispal(char *str){  
    int length=strlen(str);
    return check(str,0,length-1);
}
    int main(){
        char *t;
        printf("enter:\n");
        scanf("%s",t);
        if(ispal(t)){
            printf("%s is pal\n",t);
        }
        else{
            printf("%s is not",t);
        }
        return 0;
    }