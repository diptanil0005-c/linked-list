#include <stdio.h>
int power(int base, int expo){
    if(base==0&&expo==0){
        return 0;
    }
    if(base==0){
        return 0;
    }
    if(expo==0){
        return 1;
    }
else{
    
    return base*power(base,expo-1);
}
}
int main()
{
   int base,expo;
    printf("Enter:\n");
    scanf("%d",&base);
    printf("Enter:\n");
    scanf("%d",&expo);
    if(expo<0){
        printf("error");
    }
    else{
    int powe=power(base,expo);
    printf("%d^%d=%d",base,expo,powe);
    }

    return 0;
}